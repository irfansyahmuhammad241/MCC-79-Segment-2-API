@{
    Layout = "LayoutEmployee";
}


<div class="text-center">
    <h1 class="align-content-center" id="judul">List Employee</h1>
</div>
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAddEmployee">Add Employee</button>
<div class ="add-employee">
    <div class="modal" id="modalAddEmployee" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Employee</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="firstName" class="form-label"> First Name</label>
                        <input type ="text" class="form control" id="firstName" placeholder="First Name"> 
                    </div>
                    <div class="mb-3">
                        <label for="lastName" class="form-label"> Last Name</label>
                        <input type="text" class="form control" id="lastName" placeholder="Last Name">
                    </div>
                     <div class="mb-3">
                        <label for="birthDate" class="form-label"> Birth Date</label>
                        <input type="datetime-local" class="form control" id="birthDate" placeholder="Birth Date">
                    </div>
                    <div class="mb-3">
                        <label class="form-label"> Gender</label>
                        <br/>
                        <div class="form-check">
                            <input class ="form-check-input" type="radio" name="gender" id="femaleRadio" value="female" checked>    
                            <label class ="form-check-label" for="femaleRadio">Female</label>
                        </div>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender" id="maleRadio" value="male" checked>
                        <label class="form-check-label" for="maleRadio">male</label>
                    </div>  
                    <div class="mb-3">
                        <label for="hiringDate" class="form-label"> Hiring Date</label>
                        <input type="datetime-local" class="form control" id="hiringDate" placeholder="Hiring Date">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label"> Email</label>
                        <input type="email" class="form control" id="email" placeholder="Email">
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label"> Phone Number</label>
                        <input type="tel" class="form control" id="phoneNumber" placeholder="Phone Number">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick ="addEmployee()" class="btn btn-primary d-inline-block" data-bs-dismiss="modal">Add Employee</button>
                    <button type="button" class="btn btn-secondary d-inline-block"  data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
<table class="table table-striped table-hover table-bordered" id="employeeTable">
    <thead class="table-light">
        <tr>
            <th>No</th>
            <th>NIK</th>
            <th>Nama</th>
            <th>Birth Date</th>
            <th>Gender</th>
            <th>Hiring Date</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="tbodyEmployee">
    </tbody>
</table>



<div class="modal" id="modalUpdateEmployee" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type ="hidden" class="form-control" id="guidUpd" value="">
                <input type ="hidden" class="form-control" id="nikUpd" value="">
                <div class="mb-3">
                    <label for="firstName" class="form-label"> First Name</label>
                    <input type="text" class="form control" id="firstNameUpd" placeholder="First Name">
                </div>
                <div class="mb-3">
                    <label for="lastName" class="form-label"> Last Name</label>
                    <input type="text" class="form control" id="lastNameUpd" placeholder="Last Name">
                </div>
                <div class="mb-3">
                    <label for="birthDate" class="form-label"> Birth Date</label>
                    <input type="datetime-local" class="form control" id="birthDateUpd" placeholder="Birth Date">
                </div>
                <div class="mb-3">
                    <label class="form-label"> Gender</label>
                    <br />
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender" id="femaleRadio" value="female" checked>
                        <label class="form-check-label" for="femaleRadio">Female</label>
                    </div>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gender" id="maleRadio" value="male" checked>
                    <label class="form-check-label" for="maleRadio">male</label>
                </div>
                <div class="mb-3">
                    <label for="hiringDate" class="form-label"> Hiring Date</label>
                    <input type="datetime-local" class="form control" id="hiringDateUpd" placeholder="Hiring Date">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label"> Email</label>
                    <input type="email" class="form control" id="emailUpd" placeholder="Email">
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label"> Phone Number</label>
                    <input type="tel" class="form control" id="phoneNumberUpd" placeholder="Phone Number">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="UpdateEmployee()" class="btn btn-primary d-inline-block" data-bs-dismiss="modal">Update Employee</button>
                <button type="button" class="btn btn-secondary d-inline-block" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

