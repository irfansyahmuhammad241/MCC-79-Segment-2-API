@{
    Layout = "LayoutPokemon";
}


<div class="text-center">
    <img class="pokeball-img img-rounded" id="pokeball-image" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Pok%C3%A9_Ball_icon.svg/1200px-Pok%C3%A9_Ball_icon.svg.png">
    <h1 class="align-content-center" id="judul">List Pokemon</h1>
</div>
<table class="table table-striped table-hover table-bordered" id="mainTable">
    <thead class="table-primary">
        <tr>
            <th>No</th>
            <th>Nama</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="tbodyPokemon">
    </tbody>
</table>

<div class="modal" id="modalPoke" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <img class="pokemon-img" id="image" src="">
                        <div class="pokemon-type text-center">Pokemon Type Goes Here</div>
                    </div>
                    <div class="col">
                        <h4 class="text-center" id="detail-title">Pokemon Details</h4>
                        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="pills-stats-tab" data-bs-toggle="pill" data-bs-target="#pills-stats" type="button" role="tab" aria-controls="pills-stats" aria-selected="true">Stats</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="pills-abilities-tab" data-bs-toggle="pill" data-bs-target="#pills-abilities" type="button" role="tab" aria-controls="pills-abilities" aria-selected="false">Abilities</button>
                            </li>
                        </ul>
                        <div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="pills-stats" role="tabpanel" aria-labelledby="pills-stats-tab">
                                <div class="pokemon-stats"></div>
                                <h3 class="mt-2">Statistik</h3>
                                <div class="progress">
                                    <div class="progress-bar rounded bg-success progress-bar progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" id="hp">HP</div>
                                </div>
                                <div class="progress mt-2">
                                    <div class="progress-bar rounded bg-danger progress-bar progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" id="attack">Attack</div>
                                </div>
                                <div class="progress mt-2">
                                    <div class="progress-bar rounded bg-info progress-bar progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" id="defense">Defense</div>
                                </div>
                                <div class="progress mt-2">
                                    <div class="progress-bar rounded bg-danger progress-bar progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" id="sattack">Spesial Attack</div>
                                </div>
                                <div class="progress mt-2">
                                    <div class="progress-bar rounded bg-info progress-bar progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" id="sdefense">Spesial Defense</div>
                                </div>
                                <div class="progress mt-2">
                                    <div class="progress-bar rounded bg-warning progress-bar progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" id="speed">Speed</div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="pills-abilities" role="tabpanel" aria-labelledby="pills-abilities-tab">
                                <div class="pokemon-abilities "></div>
                            </div>
                        </div>
                    </div>
                </div>  
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

